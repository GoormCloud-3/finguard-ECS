{
  "family": "sqs-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "sqs-service",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/sqs-service:${IMAGE_TAG}",
      "essential": true,
      "environment": [
        { "name": "AWS_XRAY_DAEMON_ADDRESS", "value": "127.0.0.1:2000" },
        { "name": "AWS_XRAY_CONTEXT_MISSING", "value": "LOG_ERROR" },
        { "name": "AWS_DEFAULT_REGION", "value": "${AWS_REGION}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sqs-service",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "dependsOn": [
        { "containerName": "xray-daemon", "condition": "START" }
      ]
    },
    {
      "name": "xray-daemon",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/xray-daemon:3.x",
      "essential": false,
      "command": ["-o"], 
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/xray-daemon",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "portMappings": [
        { "containerPort": 2000, "protocol": "udp" },
        { "containerPort": 2000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "AWS_REGION", "value": "${AWS_REGION}" }
      ]
    }
  ]
}