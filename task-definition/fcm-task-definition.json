{
  "family": "finguard-fcm-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "3072",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsFCMTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsFCMTaskExecutionRole",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "fcm-worker",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/finguard/fcm-python-image:${IMAGE_TAG}",
      "essential": true,
      "environment": [
        { "name": "AWS_REGION", "value": "${AWS_REGION}" },
        { "name": "QUEUE_URL", "value": "https://sqs.${AWS_REGION}.amazonaws.com/${AWS_ACCOUNT_ID}/fcm-push-trade-queue" },
        { "name": "XRAY_SERVICE_NAME", "value": "fcm-worker" },
        { "name": "AWS_XRAY_DAEMON_ADDRESS", "value": "127.0.0.1:2000" },
        { "name": "LOG_LEVEL", "value": "INFO" },
        { "name": "FIREBASE_SA_PARAM", "value": "/prod/firebase-service-account-json" }
      ],"secrets": [
        {
          "name": "FIREBASE_SA_JSON",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/prod/firebase-service-account-json"
        }
      ],
      "dependsOn": [
        { "containerName": "xray-daemon", "condition": "START" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/finguard/ecs-b-worker",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    },
    {
      "name": "xray-daemon",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/xray-daemon",
      "essential": true,
      "portMappings": [
        { "containerPort": 2000, "protocol": "udp" }
      ],
      "environment": [
        { "name": "AWS_REGION", "value": "${AWS_REGION}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/finguard/ecs-b-worker",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "xray",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}