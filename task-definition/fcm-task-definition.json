{
  "family": "fcm-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "volumes": [{ "name": "ecs-sd-vol" }],
  "containerDefinitions": [
    {
      "name": "adot-collector",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/adot-collector:latest",
      "command": ["--config=/etc/ecs/otel-config.yaml"],
      "environment": [
        { "name": "AWS_REGION", "value": "${AWS_REGION}" },
        { "name": "AMP_WORKSPACE_ID", "value": "${AMP_WORKSPACE_ID}" },
        { "name": "SERVICE_NAMESPACE", "value": "finguard" },
        { "name": "DEPLOY_ENV", "value": "prod" },
        { "name": "ECS_CLUSTER_NAME", "value": "ecs-cluster" }
      ],
      "user": "0",
      "mountPoints": [
        {
          "sourceVolume": "ecs-sd-vol",
          "containerPath": "/sd",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/adot-collector",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "essential": true
    },
    {
      "name": "fcm-service",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/fcm-service:${IMAGE_TAG}",
      "dependsOn": [
        { "containerName": "adot-collector", "condition": "START" }
      ],
      "command": ["opentelemetry-instrument", "python", "-m", "worker"],
      "environment": [
        { "name": "OTEL_TRACES_EXPORTER", "value": "otlp" },
        { "name": "OTEL_METRICS_EXPORTER", "value": "none" },
        {
          "name": "OTEL_EXPORTER_OTLP_ENDPOINT",
          "value": "http://ADOT_COLLECTOR_IP:4317"
        },
        { "name": "OTEL_EXPORTER_OTLP_PROTOCOL", "value": "grpc" },
        { "name": "OTEL_PROPAGATORS", "value": "xray" },
        { "name": "OTEL_TRACES_SAMPLER", "value": "parentbased_always_on" },
        {
          "name": "OTEL_RESOURCE_ATTRIBUTES",
          "value": "service.name=fcm-service,service.namespace=finguard"
        },
        { "name": "HEALTH_PORT", "value": "8000" }
      ],
      "secrets": [
        {
          "name": "FIREBASE_SA_JSON",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/prod/firebase-service-account-json"
        }
      ],
      "portMappings": [{ "containerPort": 8000, "protocol": "tcp" }],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fcm-service",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -sf http://localhost:8000/health || exit 1"
        ],
        "interval": 10,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      },
      "essential": true
    }
  ]
}
